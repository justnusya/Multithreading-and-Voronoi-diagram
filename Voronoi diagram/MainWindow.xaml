<Window x:Class="Voronoi_diagram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Voronoi_diagram"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Для кнопок -->
            <RowDefinition/>
            <!-- Для canvas -->
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="White" Margin="20" Height="30">
            <Button Content="Випадково:" Click="GenerateRandomPoints_Click" Margin="60,0,0,0" Width="130"/>
            <TextBox Name="DotAmount" TextAlignment="Center" VerticalContentAlignment="Center" Width="70" Margin="20,0,0,0"/>
            <Button Content="Однопоточний режим" Click="SingleThreaded_Click" Margin="50,0,0,0"/>
            <Button Content="Багатопоточний режим" Click="MultiThreaded_Click" Margin="100,0,0,0"/>
        </StackPanel>

        <Canvas Grid.Row="1" Name="canvas" Background="White"
            MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
            MouseRightButtonDown="Canvas_MouseRightButtonDown"/>
    </Grid>
</Window>